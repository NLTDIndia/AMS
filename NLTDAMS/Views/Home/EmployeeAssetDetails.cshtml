@model IEnumerable<AMSUtilities.Models.EmployeeAssetMappingModel>
@{
    ViewBag.Title = "EmployeeAssetDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Employee Asset Details</h3>
            </div>
            <div class="box-body">
                @if (Model != null)
                {
                    <div class="row">
                        <div class="col-sm-3">
                            <label for="EmpName">EmployeeName</label>
                            @Html.TextBoxFor(model => Model.First().EmployeeName, new { @class = "form-control", @disabled = "true" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <label for="AssetName">Asset Name</label>
                            @foreach (var item in Model)
                            {

                                @Html.TextBoxFor(a => item.AssetName, new { @class = "form-control", @disabled = "true" })

                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-sm-3">
                            <label style="color:red">No Records Found!!</label>

                        </div>

                    </div>
                }

            </div>
                </div>
   </div>
</div>