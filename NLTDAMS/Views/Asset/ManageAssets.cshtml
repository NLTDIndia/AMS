@model IEnumerable<AMSUtilities.Models.AssetModel>
@{
    ViewBag.Title = "ManageAssets";
}

    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Assets</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="button" value="Create Asset" class="btn btn-primary control-float-right" onclick='window.location.href = "@Url.Action("Create", "Asset", routeValues: null)"' />
                        </div>
                    </div>
                    <div class="row row-space">
                        <div class="col-sm-12">

                            <table id="componentType" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.AssetName)</th>
                                        <th>@Html.DisplayNameFor(model => model.AssetType)</th>
                                        <th>@Html.DisplayNameFor(model => model.SerialNumber)</th>
                                        <th>@Html.DisplayNameFor(model => model.AssetStatus)</th>
                                        <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.AssetName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.AssetType)</td>
                                            <td>@Html.DisplayFor(modelItem => item.SerialNumber)</td>
                                            <td>@Html.DisplayFor(modelItem => item.AssetStatus)</td>
                                            <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.EmployeeName))
                                                {
                                                    <a class="fa fa-fw fa-thumbs-o-down" data-toggle="tooltip" title="UnAssign" onclick="GetUnassignAsset(@item.ID);" data-backdrop="static"></a>
                                                }
                                                else
                                                {
                                                    <a class="fa fa-fw fa-thumbs-up" data-toggle="tooltip" title="Assign" onclick="GetAssignAsset(@item.ID);" data-backdrop="static"></a>
                                                }
                                                <a class="fa fa-edit" data-toggle="tooltip" title="Edit" href="@Url.Action("EditAsset","Asset",new { id=item.ID})"></a>
                                                <a class="fa fa-clone" data-toggle="tooltip" title="Clone" href="@Url.Action("CloneAsset","Asset",new { id=item.ID})"></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
    $(document).ready(function () {
        DisplayMessage("@TempData["MessageType"]", "@TempData["Message"]");
        $('#Assets').DataTable();
        $('[data-toggle="tooltip"]').tooltip();
    });

    function GetAssignAsset(ID) {
        var url = '@Url.Action("AssignAsset", "Asset")?Id=' + ID; 
        if (url != "" && url != null) {
            $("#LoadPopup").load(url, function () {
                $('#LoadPopup').show();
                $('#modal-Assign').modal({
                    show: 'true',
                    backdrop : false
                });
            })
        }
    }

    function GetUnassignAsset(ID) {
        var url = '@Url.Action("UnassignAsset", "Asset")?Id=' + ID; 
        if (url != "" && url != null) {
            $("#LoadPopup").load(url, function () {
                $('#LoadPopup').show();
                $('#modal-Unassign').modal({
                    show: 'true',
                    backdrop : false
                });
            })
        }
    }   
</script>





