@model NLTDAMS.ViewModel.AssetViewModel
@{
    Layout = "~/Views/Shared/_myLayoutPage.cshtml";
    ViewBag.Title = "Create Asset";
}
@using (Html.BeginForm("AssetCreation", "Asset", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "formCreateAsset", @class = "formAssetCreation" }))
{
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Create New Asset</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="InvoiceNumber">Invoice Number</label>
                                <input class="form-control" data-val="true" data-val-required="The Invoice Number field is required." id="invoiceNumber" name="hardwareAssetModel.InvoiceNumber" type="text">
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="InvoiceDate">Invoice Date</label>
                                <div>
                                    <input class="form-control datepicker" data-val="true" data-val-date="The field Invoice Date must be a date." data-val-required="The Invoice Date field is required." id="invoiceDate" name="InvoiceDate" type="text">
                                </div>

                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label for="InvoiceFile">Invoice File</label>
                                <input class="form-control" data-val="true" data-val-required="The Invoice File field is required." id="invoiceFile" name="InvoiceFile" type="file">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <label for="Asset_Category">Asset Category</label>
                            <select id="AssetCategory" name="AssetCategory" class="form-control">
                                <option disabled selected value="">Please select value</option>
                                <option value="1">Hardware</option>
                                <option value="2">Software</option>
                                <option value="3">Original Equipment Manufacturer</option>
                            </select>
                        </div>
                    </div>

                </div>
            </div>
            <div class="box box-primary">
                <h3 class="box-title">@ViewBag.Category</h3>
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-2">
                            <label for="Asset_Type">Asset Type</label>
                            <select id="AssetType" name="AssetType" class="form-control">
                                <option value="1">Laptop</option>
                                <option value="2">CPU</option>
                                <option value="3">Keyboard</option>
                                <option value="3">Mouse</option>
                            </select>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="From">Serial Number</label>
                                <input class="form-control" data-val="true" data-val-required="The Model Number field is required." id="SerialNumber" name="SerialNumber" type="text">
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="From">Model</label>
                                <input class="form-control" data-val="true" data-val-required="The Model Number field is required." id="modelNumber" name="hardwareAssetModel.Model" type="text">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="From">Service Tag</label>
                                <input class="form-control" data-val="true" data-val-required="The Product Name field is required." id="HardwareProductName" name="HardwareProductName" type="text">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <label for="Manufacturer">Manufacturer</label>
                            <input class="form-control" data-val="true" data-val-required="The Manufacturer field is required." id="manufacturer" name="SerialNumber" type="text">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="From">Warranty Start Date</label>
                                <div class="purchaseDate">
                                    <input class="form-control datepicker" data-val="true" data-val-date="The field Warranty Start Date must be a date." data-val-required="The Warranty Start Date field is required." id="warrantyStartDate" name="WarrantyEndDate" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="To">Warranty End Date</label>
                                <div class="warrantyExpiration">
                                    <input class="form-control datepicker" data-val="true" data-val-date="The field Warranty End Date must be a date." data-val-required="The Warranty End Date field is required." id="warrantyEndDate" name="WarrantyEndDate" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="Reason">Hardware Description</label>
                                <textarea class="form-control" cols="20" id="hardwareDescription" name="HardwareDescription" rows="2"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6" style="margin-top:20px">
                            <!-- Custom Tabs -->
                            <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#tab_1" data-toggle="tab">Hardware Components</a></li>
                                    <li><a href="#tab_2" data-toggle="tab">Software Components(OEM)</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab_1">
                                        <div class="box-body">
                                            <div class="col-md-7">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-2 control-label">Processor</label>

                                                    <div class="col-sm-10">
                                                        <select id="AssetCategory" name="AssetCategory" class="form-control">
                                                            <option disabled selected value="">Please select value</option>
                                                            <option value="1">Hardware</option>
                                                            <option value="2">Software</option>
                                                            <option value="3">Original Equipment Manufacturer</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-7">
                                                <div class="form-group" style="margin-top:15px">
                                                    <label for="inputEmail3" class="col-sm-2 control-label">HDD</label>

                                                    <div class="col-sm-10">
                                                        <select id="AssetCategory" name="AssetCategory" class="form-control">
                                                            <option disabled selected value="">Please select value</option>
                                                            <option value="1">Hardware</option>
                                                            <option value="2">Software</option>
                                                            <option value="3">Original Equipment Manufacturer</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-7">
                                                <div class="form-group" style="margin-top:15px">
                                                    <label for="inputEmail3" class="col-sm-2 control-label">ROM</label>

                                                    <div class="col-sm-10">
                                                        <select id="AssetCategory" name="AssetCategory" class="form-control">
                                                            <option disabled selected value="">Please select value</option>
                                                            <option value="1">Hardware</option>
                                                            <option value="2">Software</option>
                                                            <option value="3">Original Equipment Manufacturer</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="col-md-7">
                                                <div class="form-group" style="margin-top:15px">
                                                    <label for="inputEmail3" class="col-sm-2 control-label">Charger</label>

                                                    <div class="col-sm-10">
                                                        <select id="AssetCategory" name="AssetCategory" class="form-control">
                                                            <option disabled selected value="">Please select value</option>
                                                            <option value="1">Hardware</option>
                                                            <option value="2">Software</option>
                                                            <option value="3">Original Equipment Manufacturer</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                    <!-- /.tab-pane -->
                                    <div class="tab-pane" id="tab_2">
                                        <div class="box-body">
                                            <div class="col-md-7">
                                                <div class="form-group" style="margin-top:15px">
                                                    <label for="inputEmail3" class="col-sm-2 control-label">OS</label>

                                                    <div class="col-sm-10">
                                                        <select id="AssetCategory" name="AssetCategory" class="form-control">
                                                            <option disabled selected value="">Please select value</option>
                                                            <option value="1">Hardware</option>
                                                            <option value="2">Software</option>
                                                            <option value="3">Original Equipment Manufacturer</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="col-md-7">
                                                <div class="form-group" style="margin-top:15px">
                                                    <label for="inputEmail3" class="col-sm-2 control-label">Office</label>

                                                    <div class="col-sm-10">
                                                        <select id="AssetCategory" name="AssetCategory" class="form-control">
                                                            <option disabled selected value="">Please select value</option>
                                                            <option value="1">Hardware</option>
                                                            <option value="2">Software</option>
                                                            <option value="3">Original Equipment Manufacturer</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.tab-pane -->
                                </div>
                                <!-- /.tab-content -->
                            </div>
                            <!-- nav-tabs-custom -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer" id="footerId">
                <div id="conformBox"></div>
                <div class="col-sm-2" style="padding-right:0px;float:right">
                    <button type="button" class="btn btn-primary pull-right" id="btnSubmit" onclick="SubmitForm(this)">
                        CREATE ASSET
                    </button>
                </div>
            </div>
        </div>
    </div>

}
<script src="~/Scripts/AMS/AMSCalender.js"></script>
